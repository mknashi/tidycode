{
  "name": "tidycode",
  "private": true,
  "version": "0.2.4",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:desktop": "tauri dev",
    "build": "vite build",
    "build:full": "npm run build:wasm && vite build",
    "build:web": "vite build",
    "build:wasm": "node scripts/build-wasm.js",
    "build:wasm:force": "cd src-wasm && wasm-pack build --target web --out-dir pkg --release",
    "build:wasm:dev": "cd src-wasm && wasm-pack build --target web --out-dir pkg --dev",
    "test:wasm": "cd src-wasm && cargo test",
    "prepare:lsp": "node scripts/prepare-lsp.js",
    "clean:build": "bash scripts/clean-build.sh",
    "clean:build:win": "powershell -ExecutionPolicy Bypass -File scripts/clean-build-windows.ps1",
    "build:desktop": "npm run prepare:lsp && npm run build:full && tauri build",
    "build:desktop:mac": "npm run prepare:lsp && tauri build --target universal-apple-darwin",
    "build:desktop:win": "npm run prepare:lsp && tauri build --target x86_64-pc-windows-msvc",
    "build:desktop:win:x64": "npm run prepare:lsp && tauri build --target x86_64-pc-windows-msvc",
    "build:desktop:win:arm64": "npm run prepare:lsp && tauri build --target aarch64-pc-windows-msvc",
    "build:desktop:win:all": "npm run build:desktop:win:x64 && npm run build:desktop:win:arm64",
    "build:desktop:win:portable": "powershell -ExecutionPolicy Bypass -File scripts/build-portable.ps1",
    "build:desktop:win:signed": "powershell -ExecutionPolicy Bypass -File scripts/build-signed.ps1",
    "sign:gpg": "powershell -ExecutionPolicy Bypass -File scripts/sign-release.ps1 -Auto",
    "sign:installer": "powershell -ExecutionPolicy Bypass -File scripts/sign-installer.ps1",
    "build:desktop:linux": "npm run prepare:lsp && tauri build --target x86_64-unknown-linux-gnu",
    "preview": "vite preview",
    "start": "node serve.js",
    "test:smoke": "npm run build && npm run prepare:lsp && tauri build --debug --bundles none",
    "test:ai": "node src/services/ai/__tests__/run.js",
    "test:ai:live": "node src/services/ai/__tests__/run.js --live"
  },
  "dependencies": {
    "@codemirror/lang-cpp": "^6.0.3",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-java": "^6.0.2",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lang-php": "^6.0.2",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-rust": "^6.0.2",
    "@codemirror/lang-sql": "^6.10.0",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/language": "^6.10.5",
    "@codemirror/legacy-modes": "^6.5.2",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.4.1",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.36.2",
    "@crabnebula/tauri-plugin-drag": "^2.1.0",
    "@lezer/highlight": "^1.2.1",
    "@mlc-ai/web-llm": "^0.2.79",
    "@replit/codemirror-vim": "^6.3.0",
    "@tauri-apps/plugin-clipboard-manager": "^2.3.2",
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@uiw/react-codemirror": "^4.25.3",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "codemirror-languageserver": "^1.18.1",
    "diff": "^8.0.2",
    "express": "^4.18.2",
    "js-yaml": "^4.1.1",
    "lucide-react": "^0.263.1",
    "marked": "^17.0.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "5.4.296",
    "prismjs": "^1.30.0",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-pdf": "^10.2.0",
    "react-zoom-pan-pinch": "^3.7.0",
    "smol-toml": "^1.6.0",
    "tinyllm": "github:mknashi/tinyllm"
  },
  "devDependencies": {
    "@tauri-apps/api": "^2.9.0",
    "@tauri-apps/cli": "^2.9.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.49",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.17",
    "vite": "^6.0.5",
    "vite-plugin-static-copy": "^3.1.4"
  },
  "overrides": {
    "qs": "^6.14.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.0.0"
  }
}
